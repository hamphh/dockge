{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check",
            "type": "shell",
            "command": "npm run lint && npm run check-ts",
            "problemMatcher": [
                "$eslint-compact",
                "$tsc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Start Frontend",
            "type": "npm",
            "script": "dev:frontend",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Start Backend",
            "type": "npm",
            "script": "dev:backend",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build & Push Image",
            "type": "shell",
            "command": "npm run build:frontend && docker build --platform linux/amd64,linux/arm/v7 -f ${workspaceFolder}/docker/Dockerfile -t ${input:imagename} ${workspaceFolder} && docker push ${input:imagename}",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
           "label": "Build Base Image",
            "type": "shell",
            "command": "docker build --platform linux/amd64,linux/arm/v7 -f ${workspaceFolder}/docker/Base.Dockerfile -t ${input:baseimagename} ${workspaceFolder}",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            } 
        }
    ],
    "inputs": [
        {
        "id": "imagename",
        "type": "promptString",
        "description": "Enter the image name with optionally a tag"
        },
        {
        "id": "baseimagename",
        "type": "promptString",
        "description": "Enter the base image name with optionally a tag"
        }
  ]
}