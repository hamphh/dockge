{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check",
            "type": "shell",
            "command": "npm run lint && npm run check-ts",
            "problemMatcher": [
                "$eslint-compact",
                "$tsc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Start Frontend",
            "type": "npm",
            "script": "dev:frontend",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Start Backend",
            "type": "npm",
            "script": "dev:backend",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Build & Push Image",
            "type": "shell",
            "command": "npm run build:frontend && docker build -f ${workspaceFolder}/docker/Dockerfile -t hamphh/dockge ${workspaceFolder} && docker push hamphh/dockge",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}